@page "{id}"
@model Shop.Pages.Admin.Comments.DeleteCommentModel
@{
    ViewData["Title"] = "حذف دیدگاه";
}
<div class="container alert alert-danger">
    <form method="post">
        <input type="hidden" asp-for="Comment.CommentId" />
        <input type="hidden" asp-for="Comment.Comment" />
        <h2>آیا از حذف دیدگاه "@Model.Comment.Comment" مطمئن هستید </h2>
        <p>
            <input type="submit" value="حذف کن" class="btn btn-outline btn-danger" />
            <a asp-page="Index" class="btn btn-outline btn-info">انصراف</a>
        </p>
    </form>
</div>