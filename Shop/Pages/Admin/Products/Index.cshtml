@page
@model Shop.Pages.Admin.Products.IndexModel
@{
    ViewData["Title"] = "لیست محصولات";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست محصولات</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست محصولات سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row">
                            <form>
                                <div class="col-sm-5 col-md-5">
                                    <input type="text" name="filterProductName" class="form-control" placeholder="نام محصول" />
                                </div>

                                <div class="col-sm-2 col-md-2">
                                    <button type="submit" class="btn btn-info">بگرد</button>
                                    <a class="btn btn-default btn-sm" href="/Admin/Products">خالی</a>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-page="CreateProduct" class="btn btn-outline btn-success">افزودن محصول جدید</a>

                        </div>

                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>تصویر</th>
                                    <th>عنوان محصول</th>
                                    <th>قیمت محصول</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListProduct.Products)
                                {
                                    <tr>
                                        <td>
                                            <img src="/product/thumb/@item.ProductImageName" class="thumbnail" />
                                        </td>
                                        <td>
                                            @item.ProductTitle
                                        </td>
                                        <td>
                                            @item.ProductPrice
                                        </td>
                                        <td>
                                            <a href="/Admin/Products/IndexProductFile/@item.ProductId" class="btn btn-default btn-sm">
                                               فایل ها
                                            </a>
                                            <a href="/Admin/Products/EditProduct/@item.ProductId" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>

                                            <a href="/Admin/Products/DeleteProduct/@item.ProductId" class="btn btn-danger btn-sm">
                                                حذف
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                    <ul class="pagination">

                                        @for (int i = 1; i <= Model.ListProduct.PageCount + 1; i++)
                                        {
                                            <li class="paginate_button @((i==Model.ListProduct.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                                <a href="/Admin/Products?PageId=@i">@i</a>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>