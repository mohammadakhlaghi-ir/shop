@page "{id}"
@model Shop.Pages.Admin.Products.CreateProductFileModel
@{
    ViewData["Title"] = "فایل جدید";
}

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="ProductFile.ProductId" />
        <div class="col-md-12">
            <h2>اطلاعات محصول</h2>
            <hr />
            <div class="form-group">
                <label>عنوان فایل</label>
                <input type="text" asp-for="ProductFile.FileTitle" class="form-control">
                <span asp-validation-for="ProductFile.FileTitle"></span>
            </div>
           
            <div class="form-group">
                <label>فایل محصول</label>
                <input type="file" name="fileProduct">
                <p class="text-danger">فایل اجباری است</p>
                @if (ViewData["IsExistFile"] != null)
                {
                    <div class="alert alert-danger">
                        نام فایل معتبر نیست ، لطفا تغییر دهید
                    </div>
                }
                <span asp-validation-for="ProductFile.FileName"></span>
            </div>
            <div class="form-group">
                <label>دسترسی</label>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" asp-for="ProductFile.IsFree">
                        رایگان است
                    </label>
                </div>
                <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
            </div>
        </div>
    </form>
</div>

