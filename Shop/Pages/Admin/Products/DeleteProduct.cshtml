@page "{id}"
@model Shop.Pages.Admin.Products.DeleteProductModel
@{
    ViewData["Title"] = "حذف محصول";
}

<div class="container alert alert-danger">
    <form method="post">
        <input type="hidden" asp-for="Product.ProductId" />
        <input type="hidden" asp-for="Product.ProductTitle" />
        <h2>آیا از حذف محصول "@Model.Product.ProductTitle" مطمئن هستید </h2>
        <p>
            <input type="submit" value="حذف کن" class="btn btn-outline btn-danger" />
            <a asp-page="Index" class="btn btn-outline btn-info">انصراف</a>
        </p>
    </form>
</div>

