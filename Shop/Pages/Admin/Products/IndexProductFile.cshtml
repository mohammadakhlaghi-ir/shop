@page "{id}"
@model Shop.Pages.Admin.Products.IndexProductFileModel
@{
    ViewData["Title"] = "فایل های محصول";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست فایل ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست محصولات سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="col-md-12" style="margin: 10px 0;">

                    <a asp-page="CreateProductFile" asp-route-id="@ViewData["ProductId"].ToString()" class="btn btn-outline btn-success">افزودن فایل جدید</a>

                </div>

                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th>عنوان فایل</th>
                            <th>رایگان</th>
                            <th>دستورات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ProductFiles)
                        {
                        <tr>
                            <td>
                                @item.FileTitle
                            </td>
                            <td>
                                @if (item.IsFree)
                                {
                                    <span class="text-success">
                                        <i class="glyphicon glyphicon-ok"></i>
                                    </span>
                                }
                                else
                                {
                                    <span class="text-danger">
                                        <i class="glyphicon glyphicon-remove"></i>
                                    </span>
                                }
                            </td>
                            <td>
                                <a href="/Admin/Products/EditProductFile/@item.FileId" class="btn btn-warning btn-sm">
                                    ویرایش
                                </a>
                                <a href="/Admin/Products/DeleteProductFile/@item.FileId" class="btn btn-danger btn-sm">
                                    حذف
                                </a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

