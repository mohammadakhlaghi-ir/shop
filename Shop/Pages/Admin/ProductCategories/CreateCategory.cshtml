@page "{id?}"
@model Shop.Pages.Admin.ProductCategories.CreateCategoryModel
@{
    ViewData["Title"] = "افزودن دسته بندی";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن دسته بندی جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="ProductCategories.ParentId" />
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    دسته بندی جدید
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان دسته بندی</label>
                        <input type="text" asp-for="ProductCategories.CategoryTitle" class="form-control">
                    </div>
                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>

    </form>
</div>




