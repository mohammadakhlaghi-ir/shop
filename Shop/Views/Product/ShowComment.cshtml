@using Shop.Core.Convertors
@using Shop.DataLayer.Entities.Product
@model Tuple<List<Shop.DataLayer.Entities.Product.ProductComment>, int>

@{
    Layout = null;
}

@foreach (var item in Model.Item1)
{
    <div class="comment-row">
        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <td style="width: 50%;"><strong><span> @item.User.UserName</span></strong></td>
                    <td class="text-right"><span>@item.CreateDate.ToShamsi()</span></td>
                </tr>
                <tr>
                    <td colspan="2">

                        <p> @item.Comment</p>
                     
                    </td>
                </tr>
            </tbody>
        </table>
       
    </div>

}

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">

        @for (int i = 1; i <= Model.Item2; i++)
        {
            <li class="page-item"><a class="page-link" onclick="pageComment(@i)">@i</a></li>
        }

    </ul>
</nav>

