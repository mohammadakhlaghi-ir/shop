@model Shop.Core.DTOs.ShowProductListItemViewModel
<div class="product-thumb clearfix">
    <div class="/image"><a href="product.html"><img src="/product/thumb/@Model.ImageName" alt="@Model.Title" title="@Model.Title" class="img-responsive" /></a></div>
    <div class="caption">
        <h4><a href="product.html">@Model.Title</a></h4>
        <p class="price"><span class="price-new">@((Model.Price==0)?"رایگان":Model.Price.ToString("#,0") + "تومان") </span> <span class="price-old">@((Model.Price==0)?null:Model.OldPrice.ToString("#,0") + "تومان")</span></p>
    </div>
    <div class="button-group">
        <button class="btn-primary" type="button" onClick="cart.add('42');"><span>افزودن به سبد</span></button>
        <div class="add-to-links">
        </div>
    </div>
</div>
