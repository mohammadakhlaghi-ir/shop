@model Shop.Core.DTOs.ChangePasswordViewModel 
@{
    ViewData["Title"] = "تغییر کلمه عبور";
}


<div id="container">
    <div class="container">
        <!-- Breadcrumb Start-->
        <ul class="breadcrumb">
            <li><a href="/"><i class="fa fa-home"></i></a></li>
            <li><a href="/UserPanel/ChangePassword">تغییر کلمه عبور</a></li>

        </ul>
        @if (ViewBag.IsSuccess != null)
        {
            <div class="alert alert-success">
                <p class="help-block">کلمه عبور با موفقیت تغییر یافت</p>
            </div>


        }
        <!-- Breadcrumb End-->
        <div class="row">
            <!--Middle Part Start-->
            <div id="content" class="col-sm-9">
                <form class="form-horizontal" asp-action="ChangePassword" method="post">

                    <div class="form-group required">
                        <label for="input-firstname" class="col-sm-2 control-label">کلمه عبور فعلی</label>
                        <div class="col-sm-10">
                            <input asp-for="OldPassword" type="password" class="form-control" aria-describedby="password" placeholder="کلمه عبور فعلی">
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label for="input-firstname" class="col-sm-2 control-label">کلمه عبور جدید</label>
                        <div class="col-sm-10">
                            <input asp-for="Password" type="password" class="form-control" aria-describedby="password" placeholder="کلمه عبور جدید">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label for="input-firstname" class="col-sm-2 control-label">تکرار کلمه عبور </label>
                        <div class="col-sm-10">
                            <input asp-for="RePassword" type="password" class="form-control" aria-describedby="password" placeholder="تکرار کلمه عبور">
                            <span asp-validation-for="RePassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="buttons">
                        <div class="pull-right">
                            <input type="submit" class="btn btn-primary" value="ثبت">
                        </div>
                    </div>
                </form>

            </div>
            <!--Middle Part End -->
            <!--Right Part Start -->
            <partial name="_SideBar" />



            <!--Right Part End -->
        </div>
    </div>
</div>
